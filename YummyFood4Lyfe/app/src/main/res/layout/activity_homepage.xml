<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Hello Raffy!"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="What do want to cook today?"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:focusable="false"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edittext_background_white"
        android:hint="Search recipe"
        android:paddingStart="16dp"
        android:textColorHint="@color/lightgrey"
        android:drawableStart="@drawable/magnifyingglass_search"
        android:textSize="17sp"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:autofillHints=""
        tools:ignore="RtlSymmetry" />


    <TextView
        android:id="@+id/loginText"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Categories"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/editText" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginText">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/Breakfast"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:padding="4dp"
                android:src="@drawable/breakfast_category"
                android:background="@drawable/rounded_frame"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Breakfast"
                android:layout_alignStart="@+id/Breakfast"
                android:layout_alignEnd="@id/Breakfast"
                android:layout_alignBottom="@id/Breakfast"
                android:layout_marginStart="17dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="-23dp"
                android:fontFamily="@font/poppins"
                android:text="Breakfast"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/Lunch"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/Breakfast"
                android:background="@drawable/rounded_frame"
                android:padding="4dp"
                android:src="@drawable/lunch_category" />
            <!-- In theory, the rounded frame thing should work. if it doesn't then
            idk honestly -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Breakfast"
                android:layout_alignStart="@+id/Lunch"
                android:layout_alignEnd="@+id/Lunch"
                android:layout_alignBottom="@id/Breakfast"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="-25dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Lunch"
                android:textColor="@color/black"
                android:textSize="11sp" />


            <ImageView
                android:id="@+id/Dinner"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/Lunch"
                android:background="@drawable/rounded_frame"
                android:padding="4dp"
                android:src="@drawable/dinner_category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Dinner"
                android:layout_alignStart="@+id/Dinner"
                android:layout_alignEnd="@+id/Dinner"
                android:layout_alignBottom="@id/Breakfast"
                android:layout_marginStart="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="-1dp"
                android:layout_marginBottom="-25dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Dinner"
                android:textColor="@color/black"
                android:textSize="11sp" />


            <ImageView
                android:id="@+id/Desserts"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/Dinner"
                android:background="@drawable/rounded_frame"
                android:padding="4dp"
                android:src="@drawable/dessert_category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Desserts"
                android:layout_alignStart="@+id/Desserts"
                android:layout_alignEnd="@+id/Desserts"
                android:layout_alignBottom="@id/Desserts"
                android:layout_marginStart="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="-1dp"
                android:layout_marginBottom="-25dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Dessert"
                android:textColor="@color/black"
                android:textSize="11sp" />


        </RelativeLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/popular_text"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Recommended"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <!--<We can put a gif here
        android:id="@+id/put gif here maybe"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/loading animation or smth"/> -->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcview_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popular_text"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_navmenu_for_homescreen" />
</androidx.constraintlayout.widget.ConstraintLayout>