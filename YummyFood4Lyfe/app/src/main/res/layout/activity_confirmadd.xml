<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activities.ConfirmAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/checkIcon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/green_check_icon"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/confirmationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe Published Successfully!"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/extraMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can now view your recipe in your profile."
            android:textColor="@color/lightgrey"
            android:textSize="14sp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_medium"/>

    </LinearLayout>

    <Button
        android:id="@+id/viewRecipeButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="View Recipe"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_navmenu_for_homescreen"
        app:itemIconTint="@color/nav_item_color_selector"
        app:itemTextColor="@color/nav_item_color_selector"
        android:elevation="8dp"
        app:itemBackground="@null"/>

</LinearLayout>
